<h1>Product#index</h1>
<p>Find me in app/views/product/index.html.erb</p>

<div>
	<table>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Color Options</th>
			<th>Discount</th>
			<th>Price</th>
			<th>Images</th>
			<th>Category</th>
		</tr>
		<% @products.each do |p| %>
			<tr>
				<td><%= p.title %></td>
				<td><%= p.description %></td>
				<td><%= p.colour_options %></td>
				<td><%= p.discount %></td>
				<td><%= p.price %></td>
				<td>
					<% p.avatars.each do |avatar| %>
						<%= link_to image_tag(avatar.url.to_s, class: "card-img-top", style: 'width:100px;'), image_path(avatar.url.to_s), :data => {:lightbox => "#{p.category}#{p.id}"}, 'data-title': p.description %> 
					<% end %>
				</td>
				<td><%= p.category %></td>
				<td><%= link_to "Show", product_path(p.id) %></td>
				<td><%= link_to "Edit", edit_product_path(p.id) %></td>
				<td><%= link_to "Delete", product_path(p.id), method: :delete, data: { confirm: 'Are you Sure?'} %></td>
			</tr>
		<% end %>
	</table>
	<div>
		<p><%= link_to 'Create Product', new_product_path, class: 'btn btn-primary' %></p>
	</div>
</div>